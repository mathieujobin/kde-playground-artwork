<?xml version="1.0" encoding="UTF-8"?>
<cokoon_theme name="TestTheme" version="0.1pre">
	<object id="ButtonSettings">
		<expression id="DefaultIndicatorMargin" value="2"/>
		<expression id="ContentsMargin" value="5"/>
		<expression id="FocusMargin" value="3"/>
		<expression id="PressedShiftHorizontal" value="2"/>
		<expression id="PressedShiftVertical" value="2"/>
	</object>

	<object id="button_normal">
		<source id="decorationsrc" type="svg" file="button.svg"/>
		
		<expression id="zoom" value="2"/>
		
		<expression id="srcwidth" value="20"/>
		<expression id="srcheight" value="20"/>
		<expression id="edgesize" value="3"/>
		
		
		<tile id="topleft" mode_hor="stretched" mode_vert="stretched" source_id="decorationsrc" left="0" top="0" width=".o.edgesize" height=".o.edgesize"/>
		<tile id="top" mode_hor="tiled" mode_vert="stretched" source_id="decorationsrc" left="10" top="0" width="2" height=".o.edgesize"/>
		<tile id="topright" mode_hor="stretched" mode_vert="stretched" source_id="decorationsrc" left=".o.srcwidth-.o.edgesize" top="0" width=".o.edgesize" height=".o.edgesize"/>
		
		<tile id="left" mode_hor="stretched" mode_vert="stretched" source_id="decorationsrc" left="0" top=".o.edgesize+1" width=".o.edgesize" height=".o.srcheight-2*.o.edgesize"/>
		<tile id="center" mode_hor="tiled" mode_vert="stretched" source_id="decorationsrc" left=".o.edgesize+1" top=".o.edgesize" width="2" height=".o.srcheight-2*.o.edgesize"/>
		<tile id="right" mode_hor="stretched" mode_vert="stretched" source_id="decorationsrc" left=".o.srcwidth-.o.edgesize" top=".o.edgesize+1" width=".o.edgesize" height=".o.srcheight-2*.o.edgesize"/>
		
		<tile id="bottomleft" mode_hor="stretched" mode_vert="stretched" source_object="" source_id="decorationsrc" left="0" top=".o.srcheight-.o.edgesize" width=".o.edgesize" height=".o.edgesize"/>
		<tile id="bottom" mode_hor="tiled" mode_vert="stretched" source_id="decorationsrc" left=".o.edgesize+1" top=".o.srcheight-.o.edgesize" width="2" height=".o.edgesize"/>
		<tile id="bottomright" mode_hor="stretched" mode_vert="stretched" source_id="decorationsrc" left=".o.srcwidth-.o.edgesize" top=".o.srcheight-.o.edgesize" width=".o.edgesize" height=".o.edgesize"/>

		<layout id="button">
			<column type="fixed" fixed_size=".o.edgesize*.o.zoom"/>
			<column type="expanding"/>
			<column type="fixed" fixed_size=".o.edgesize*.o.zoom"/>
			<row type="fixed" fixed_size=".o.edgesize*.o.zoom">
				<cell type="tile" tile_id="topleft"/>
				<cell type="tile" tile_id="top"/>
				<cell type="tile" tile_id="topright"/>
			</row>
			<row type="expanding">
				<cell type="tile" tile_id="left"/>
				<cell type="tile" tile_id="center"/>
				<cell type="tile" tile_id="right"/>
			</row>
			<row type="fixed" fixed_size=".o.edgesize*.o.zoom">
				<cell type="tile" tile_id="bottomleft"/>
				<cell type="tile" tile_id="bottom"/>
				<cell type="tile" tile_id="bottomright"/>
			</row>
		</layout>
	</object>

	<object id="button_prelight" inherit="button_normal">
		<source id="decorationsrc" type="svg" file="button.svg">
			<replace_style_attr element_id="rect2788" attr="fill-opacity" value="0.8"/>
		</source>
	</object>

	<object id="button_pressed" inherit="button_normal">
		<source id="decorationsrc" type="svg" file="button.svg">
			<replace_style_attr element_id="rect2788" attr="fill-opacity" value="0.2"/>
			<replace_style_attr element_id="rect2788" attr="stroke-opacity" value="0.7"/>
		</source>
	</object>

	<object id="button_disabled" inherit="button_normal">
		<source id="decorationsrc" type="svg" file="button.svg">
			<replace_style_attr element_id="rect2788" attr="fill-opacity" value="0.2"/>
			<replace_style_attr element_id="rect2788" attr="stroke-opacity" value="0.3"/>
		</source>
	</object>


	<object id="Button.*.normal">
		<paint>
			<layer layout_object="button_normal" layout_id="button"/>
		</paint>
	</object>
	<object id="Button.*.pressed">
		<paint>
			<layer layout_object="button_pressed" layout_id="button"/>
		</paint>
	</object>
	<object id="Button.*.prelight">
		<paint>
			<layer layout_object="button_prelight" layout_id="button"/>
		</paint>
	</object>
	<object id="Button.*.disabled">
		<paint>
			<layer layout_object="button_disabled" layout_id="button"/>
		</paint>
	</object>

</cokoon_theme>

